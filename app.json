{
  "expo": {
    "name": "방구석 플레이리스트",
    "slug": "playlist",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#0f0f0f",
    "splash": {
      "backgroundColor": "#0f0f0f"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.playlist.app",
      "backgroundColor": "#0f0f0f",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "녹음 기능을 사용하기 위해 마이크 접근 권한이 필요합니다.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "package": "com.playlist.app",
      "backgroundColor": "#0f0f0f",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK",
        "android.permission.WAKE_LOCK"
      ]
    },
    "plugins": [
      [
        "expo-audio",
        {
          "microphonePermission": "녹음 기능을 사용하기 위해 마이크 접근 권한이 필요합니다.",
          "enableBackgroundAudio": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "85417100-960a-47f3-9b07-5af25be39e7a"
      }
    }
  }
}
